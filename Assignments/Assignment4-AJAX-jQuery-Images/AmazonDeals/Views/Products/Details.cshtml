@model AmazonDeals.Models.Product

@{
        

        ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
  <h4>Product</h4>
  <hr />
  <div class="clearfix">
    @if (Model.Files.Any(x => x.FileType == AmazonDeals.Models.FileType.Photo))
    {
      <dt>
        Photo
      </dt>
      <dd>
        <img src="~/Files?id=@Model.Files.First(x => x.FileType == AmazonDeals.Models.FileType.Photo).FileId" alt="Product Image" />
      </dd>
    }
  </div>

  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.ProductName)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.ProductName)
    </dd>

    <dt>
      @Html.DisplayNameFor(model => model.EndDate)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.EndDate)
    </dd>

    <dt>
      @Html.DisplayNameFor(model => model.Inventory)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.Inventory)
    </dd>

  </dl>
</div>
<p>
  @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
  @Html.ActionLink("Back to List", "Index")
</p>
