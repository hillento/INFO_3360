@model IEnumerable<StatsNinja.Models.StatisticEntry>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Player.PlayerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season.SeasonYears)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statistic.StatisticName)
