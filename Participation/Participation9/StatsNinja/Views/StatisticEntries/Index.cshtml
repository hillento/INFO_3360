    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Player.PlayerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Season.SeasonYears)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Statistic.StatisticName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatisticValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StatisticEntryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StatisticEntryId }) |
